<h1>Leagues</h1>
<table class="leagues table table-hover">
    <thead>
        <td>Name</td>
        <td>Sport</td>
    </thead>
<% @leagues.each do |l| %>
  <tr>
    <td><%= link_to l.name, l  %></td>
    <td><%= l.sport %></td>
  </tr>
<% end %>

</table>

<p><%= link_to "New league", new_league_path, :class => "btn btn-primary" =%></p>